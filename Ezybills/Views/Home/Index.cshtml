@{
    ViewBag.Title = "Home";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home - EzyBills</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            font-family: Arial;
        }

        .split {
            height: 100%;
            width: 49%;
            position: fixed;
            z-index: 1;
            top: 60px;
            overflow-x: hidden;
            padding-top: 20px;
        }

        .left {
            left: 1%;
            background-color: white;
            color: black;
        }

        .right {
            right: 1%;
            background-color: #111;
            color: white;
        }

        .centered {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
        }

            .centered img {
                width: 150px;
                border-radius: 50%;
            }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("EzyBills", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>

    <div class="split left">
        <div class="centered">
            <img src="https://www.graphicsprings.com/filestorage/stencils/89d316b4a47cc4fe730aa82ea6451f16.png" alt="Vendors">
            <h2>Vendors</h2>
            <a href="/Vendors/Testing_Login" class="btn btn-danger" role="button">Login</a>
            <a href="#" class="btn btn-primary" role="button">Register</a>
        </div>
    </div>

    <div class="split right">
        <div class="centered">
            <img src="https://www.w3schools.com/howto/img_avatar2.png" alt="Consumers">
            <h2>Customers</h2>
            <a href="/Customers/Login" class="btn btn-danger" role="button">Login</a>
            <a href="#" class="btn btn-primary" role="button">Register</a>
        </div>
    </div>

</body>
</html>
